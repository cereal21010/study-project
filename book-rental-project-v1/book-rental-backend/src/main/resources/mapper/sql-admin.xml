<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.bookrentalbackend.mapper.AdminMapper">

    <select id="getAdminList" parameterType="Map" resultType="com.example.bookrentalbackend.vo.AdminVO">
        SELECT *
        FROM admin
        <where>
            <if test=" id != null and id != '' ">
                AND id LIKE CONCAT('%' #{id}, '%')
            </if>
        </where>
    </select>

    <select id="findAdminBySeq" resultType="com.example.bookrentalbackend.vo.AdminVO">
        SELECT *
        FROM admin
        WHERE seq = #{seq}
    </select>

    <select id="findAdminById" resultType="com.example.bookrentalbackend.vo.AdminVO">
        SELECT *
        FROM admin
        WHERE id = #{id}
    </select>

    <insert id="insertAdmin" parameterType="Map">
        insert into admin( id, password )
        values (#{id}, #{password});
    </insert>

    <update id="updateAdmin" parameterType="Map" useGeneratedKeys="true" keyProperty="seq" >
        UPDATE admin
        SET password = #{password}
        WHERE seq = #{seq}
    </update>

    <delete id="deleteAdmin" parameterType="Map">
        DELETE
        FROM admin
        WHERE seq = #{seq}
    </delete>

</mapper>