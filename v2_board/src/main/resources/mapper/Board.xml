<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.v2_board.mapper.BoardMapper">
    <select id="getAll" resultType="com.example.v2_board.dto.BoardDTO">
        SELECT * FROM board
    </select>

    <insert id="insert" parameterType="com.example.v2_board.dto.BoardDTO">
        INSERT INTO board(title, content, writerSeq, writer, createdDate, modifiedDate, category)
                VALUE(#{title}, #{content}, #{writerSeq}, #{writer}, NOW(), NOW(), #{category})
    </insert>

</mapper>