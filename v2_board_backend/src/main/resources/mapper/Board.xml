<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.v2_board.mapper.BoardMapper">
    <select id="getAll" resultType="BoardDTO">
        SELECT *
          FROM board
    </select>

    <select id="getAllCount" parameterType="com.example.v2_board.dto.SearchDTO" resultType="int">
        SELECT COUNT(*)
          FROM board
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="searchType=='title' and keyword != null and keyword != '' ">
                AND title like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='contents' and keyword != null and keyword != '' ">
                AND contents like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='writer' and keyword != null and keyword != '' ">
                AND writer like CONCAT('%', #{keyword}, '%')
            </if>
        </trim>
    </select>

    <select id="selectList" parameterType="com.example.v2_board.dto.SearchDTO" resultType="BoardDTO">
        SELECT *
          FROM board
        <trim prefix="WHERE" prefixOverrides="AND|OR">
            <if test="searchType=='title' and keyword != null and keyword != '' ">
                AND title like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='contents' and keyword != null and keyword != '' ">
                AND contents like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='writer' and keyword != null and keyword != '' ">
                AND writer like CONCAT('%', #{keyword}, '%')
            </if>
        </trim>
        <choose>
            <when test=" sort != null and sort != '' ">
                ORDER BY ${sort} ${order}
            </when>
            <otherwise>
                ORDER BY createdDate DESC
            </otherwise>
        </choose>
              LIMIT #{ startContentNum}, #{ contentNum}
    </select>

    <insert id="insert" parameterType="BoardDTO" useGeneratedKeys="true" keyProperty="seq">
        INSERT INTO board( title, contents, writerSeq, writer, createdDate, modifiedDate, category )
         VALUE( #{title}, #{contents}, #{writerSeq}, #{writer}, NOW(), NOW(), #{category} )
    </insert>

    <select id="getOne" parameterType="int" resultType="BoardDTO">
        SELECT *
          FROM board
         WHERE seq = #{seq};
    </select>
    
    <delete id="delete" parameterType="int">
        DELETE
          FROM board
         WHERE seq = #{seq};
    </delete>

    <update id="update" parameterType="BoardDTO">
        UPDATE board
           SET title = #{title}
             , contents = #{contents}
             , modifiedDate = NOW()
             , category = #{category}
         WHERE seq = #{seq}
    </update>

</mapper>